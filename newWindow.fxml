<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="gridPane" alignment="CENTER" hgap="20" prefHeight="400.0" prefWidth="600.0" vgap="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.NewWindow">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Add New Contact" GridPane.columnIndex="1" GridPane.rowIndex="1">
      </Label>

      <Label text="First Name :" GridPane.columnIndex="1" GridPane.rowIndex="2">
      </Label>
      <TextField fx:id="firstNameField" GridPane.columnIndex="2" GridPane.rowIndex="2">
      </TextField>

      <Label text="Last Name :" GridPane.columnIndex="1" GridPane.rowIndex="3">
      </Label>
      <TextField fx:id="lastNameField" GridPane.columnIndex="2" GridPane.rowIndex="3">
       
      </TextField>
      <Label text="Phone No. :" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextField fx:id="phoneNumberField" GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="7">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" text="Ok" onAction="#addContact" />
            <Button mnemonicParsing="false" text="Cancel" onAction="#cancelButton">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>

   </children>
</GridPane>
